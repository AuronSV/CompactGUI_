                            <EasingColorKeyFrame KeyTime="00:00:00.3000000" Value="#FFFFFFFF">
                                <EasingColorKeyFrame.EasingFunction>
                                    <CubicEase EasingMode="EaseIn"/>
                                </EasingColorKeyFrame.EasingFunction>
                            </EasingColorKeyFrame>
                        </ColorAnimationUsingKeyFrames>
                    </Storyboard>
                    <Storyboard x:Key="OnMouseDown">
